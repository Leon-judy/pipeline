pipeline {
    agent any
    stages {
        stage('Non-Parallel Stage') {
            steps {
                echo 'This stage will be executed first.'
            }
        }
        stage('Parallel Stage') {
            when {
                branch 'master'
            }

            parallel {
                stage('Branch master') {
                    agent {
                        label "master"
                    }
                    steps {
                        echo "On Branch A"
                    }
                }
                stage('Branch aliyun') {
                    agent {
                        label "aliyun"
                    }
                    steps {
                        echo "On Branch B"
                    }
                }
            }
        }
    }
}
